---
interface Props {
  title:string
  info:string 
  href:string
  src:string
}
const{title, info, href, src}=Astro.props
---

<a href={href} class="card">
  <div class="data">
    <h2>{title}</h2>
    <p>{info}</p>
  </div>
  <img src={src} alt="img_snippet">
</a>
<style>
  .card{
    border-radius: 12px;
    border: 2px solid #525252;
    padding: 12px 15px;
    /*width: 355px;*/
    height: auto;
    color: white;
    text-decoration: none;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }

  .card:hover{
    background-color: #4b5563;
  }
  
  h2, p{
    margin: 0;
  }

  h2{
    font-size: 17px;
    font-weight: 600;
  }

  p{
    font-size: 13px;
    font-weight: 300;
  }

  img{
    width: 40px;
    height: 40px;
    object-fit: contain; 
  }
  
</style>
